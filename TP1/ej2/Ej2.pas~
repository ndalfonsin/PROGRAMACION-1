Program Ej2;
(*
	Sea la siguiente sucesion: an = a1 + 3(n-1)
		-obtener el k-enesimo numero
		-cual es la diferencia entre los terminos k y (k+1)

		an = 1
*)
Var
	k:byte;
	result:real;

Const
	a1 = 1;
Begin
	writeln('Obtener el k-enesimo termino de la sucesion an = a1 + 3(n-1)');
	writeln('Ingrese el termino que desea obtener: ');
	readln(k);

	result := a1 + 3*(k-1);

	writeln(result:3:2);
	
	readln();
End.
