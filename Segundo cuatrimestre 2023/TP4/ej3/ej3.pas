Program SumaN;

{Dado un numero natural N, calcular y mostrar la suma de los N primeros numeros naturales}

Function sumaN(N:integer):integer;
	var	
		i: byte;	
	begin
		for i:= N downto 1 do
			sumaN:= sumaN + i; 
	end;

var
	N: integer;

Begin
	write('Ingrese el numero N: ');readln(N);
	writeln('La suma de los N numeros es: ',sumaN(N));
	readln;
End.
